{
  "name": "vue-event-card",
  "version": "0.1.3",
  "description": "An interactive and minimalistic event card to display information.",
  "private": false,
  "license": "MIT",
  "author": "Dhruv Misra",
  "main": "./dist/vue-event-card.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
